<Window x:Class="KouveePetShop_Desktop.Layanan.Layanan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KouveePetShop_Desktop.Layanan"
        mc:Ignorable="d"
        xmlns:gif ="https://github.com/XamlAnimatedGif/XamlAnimatedGif"
        Title="Layanan" Height="730" Width="800">
    <Grid RenderTransformOrigin="0.679,0.635">
        <Grid.OpacityMask>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FFDE6868" Offset="1"/>
            </LinearGradientBrush>
        </Grid.OpacityMask>
        <Image gif:AnimationBehavior.SourceUri="/KouveePetShop_Desktop;component/AW419642_01.gif" Height="100" Margin="0,0,10,0" HorizontalAlignment="Right" Width="100" VerticalAlignment="Top"/>
        <Label Content="Kouvee Pet Shop" FontSize="15" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,19,92,0" VerticalAlignment="Top" RenderTransformOrigin="0.585,-0.063"/>
        <GroupBox Header="Data Layanan" HorizontalAlignment="Left" Height="194" Margin="17,19,0,0" VerticalAlignment="Top" Width="273"/>
        <Label Content="ID Layanan" HorizontalAlignment="Left" Margin="33,55,0,0" VerticalAlignment="Top"/>
        <Label Content="Nama Layanan" HorizontalAlignment="Left" Margin="33,85,0,0" VerticalAlignment="Top"/>
        <Label Content="Harga Layanan" HorizontalAlignment="Left" Margin="33,117,0,0" VerticalAlignment="Top"/>
        <Label Content="ID Ukuran Hewan" HorizontalAlignment="Left" Margin="32,148,0,0" VerticalAlignment="Top"/>
        <Label Content="NIP" HorizontalAlignment="Left" Margin="33,179,0,0" VerticalAlignment="Top"/>
        <TextBox Name="idlayananTxt" HorizontalAlignment="Left" Height="23" Margin="148,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="namalayananTxt" HorizontalAlignment="Left" Height="23" Margin="148,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="hargalayananTxt" HorizontalAlignment="Left" Height="23" Margin="148,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="idukuranhewanTxt" HorizontalAlignment="Left" Height="23" Margin="148,149,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="updatelogbyTxt" HorizontalAlignment="Left" Height="23" Margin="148,180,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

        <GroupBox Header="Tampil Data Layanan" Margin="310,149,25,10"/>
        <Label Name="LabelCount" Content="Tidak ada data layanan yang ditampilkan." HorizontalAlignment="Left" Margin="430,265,0,0" VerticalAlignment="Top"/>
        <DataGrid IsReadOnly="true" AutoGenerateColumns="True" x:Name="layananDT" Margin="329,195,43,29"/>
        <GroupBox Header="Aksi" HorizontalAlignment="Left" Height="144" Margin="17,218,0,0" VerticalAlignment="Top" Width="273"/>
        <Button Name="tambahBtn" Content="Tambah" HorizontalAlignment="Left" Margin="50,257,0,0" VerticalAlignment="Top" Width="83" Click="Tambah_Click" Height="38" BorderBrush="White"/>
        <GroupBox Header="Pencarian Data Layanan" Margin="310,66,25,555"/>
        <TextBox Name="cariTxt" HorizontalAlignment="Left" Height="23" Margin="329,105,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="330"/>
        <Button Name="cariBtn" Content="Cari" HorizontalAlignment="Left" Margin="673,105,0,0" VerticalAlignment="Top" Width="76"  Click="Cari_Click" BorderBrush="White"/>
        <Button Name="batalBtn" Content="Batal" HorizontalAlignment="Left" Margin="173,257,0,0" VerticalAlignment="Top" Width="86" Click="Batal_Click" Height="38" BorderBrush="White"/>
        <Button Name="hapusBtn" Content="Hapus" HorizontalAlignment="Left" Margin="173,308,0,0" VerticalAlignment="Top" Width="86" Click="Hapus_Click" Height="37" BorderBrush="White"/>
        <Button Name="ubahBtn" Content="Ubah" HorizontalAlignment="Left" Margin="50,308,0,0" VerticalAlignment="Top" Width="83" Click="Ubah_Click" Height="37" BorderBrush="White"/>
        <Button Name="menuUtamaBtn" Content=" Kembali ke Menu Utama" HorizontalAlignment="Left" Margin="310,17,0,0" VerticalAlignment="Top" Width="150" Height="30" Click="MenuUtama_Click" Background="#FF4D4D4D" Foreground="White" BorderBrush="{x:Null}"/>
        
        <GroupBox Header="Daftar Pegawai" HorizontalAlignment="Left" Height="149" Margin="17,377,0,0" VerticalAlignment="Top" Width="273"/>
        <DataGrid Name="nipDT" IsReadOnly="True" HorizontalAlignment="Left" Margin="32,421,0,185" Width="242"/>
        
        <GroupBox Header="Daftar Ukuran Hewan" HorizontalAlignment="Left" Margin="17,540,0,10" Width="273"/>
        <DataGrid Name="uhDT" HorizontalAlignment="Left" Margin="32,578,0,18" Width="242"/>
    </Grid>
</Window>
